<% if instance.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(instance.errors.count, "error") %>
         prohibited this task from being saved:</h4>

        <ul>
          <% instance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>
