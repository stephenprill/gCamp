<div class="container">
  <div class = "page-header">

    <%= link_to "Create Project", new_project_path, class: 'btn btn-primary pull-right' %>
      <h3>Projects</h3>

  </div>

    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th><th>Members</th><th>Tasks</th>
          <th colspan="3">
          </th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <% @projects.each do |project| %>
            <td><%= link_to project.name, project_path(id: project.id) %></td>
            <td><%= link_to (project.memberships.count), project_memberships_path(project_id: project.id) %></td>
            <td><%= link_to (project.tasks.count), project_tasks_path(project_id: project.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  <h3>Pivotal Tracker Projects</h3>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="1">
        </th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @tracker_projects.each do |trackerproject| %>
        <td><%=link_to trackerproject[:name], tracker_projects_path  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
