      <%= yield %>

      <div class="container">
        <div class="footer">
          <div class="text-center">
            <hr>
            <%= link_to "About", about_us_path %> |
            <%= link_to "Terms", terms_path %> |
            <%= link_to "FAQ", faq_path %> |
            <% if current_user %>
            <%= link_to "Users", users_path %> |
            <%= link_to "Projects", projects_path %>
            <% end %>
