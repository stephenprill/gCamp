<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application' %>

    <title>gCamp</title>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">

          <%= link_to "gCamp", root_path, class: 'navbar-brand' %>
          <!-- <a class="navbar-brand" href="#">gCamp</a> -->

          <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
            <li><%= link_to current_user.full_name, user_path(current_user) %></li>
            <li><%= link_to "Sign Out", signout_path %></li>
              <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Sign In", signin_path %></li>
              <% end %>
          </ul>
        </div>
      </div>


        <!-- old code
    <div class = "nav navbar-nav pull-right">
          <% if current_user %>
            <%= link_to current_user.full_name, user_path(current_user), style: 'color:#FFFFFF;' %>
            <%= link_to "| Sign Out", signout_path, style: 'color:#FFFFFF;' %>
          <% else %>
            <%= link_to "Sign Up |", signup_path, style: 'color:#FFFFFF;'  %>
            <%= link_to "Sign In", signin_path, style: 'color:#FFFFFF;'  %>
          <% end %>
        </div>
      </div>
    </div> -->



    <div class = "container">
        <% if notice.is_a? String %>
      <div class="text-center alert alert-info" >
        <%= notice %>
      </div>
    </div>

    <% end %>

    <%= yield %>

<div class="container">
      <div class="footer">

        <%= link_to "About", about_us_path %> |
        <%= link_to "Terms", terms_path %> |
        <%= link_to "FAQ", faq_path %> |
        <% if current_user %>
          <%= link_to "Users", users_path %> |
          <%= link_to "Projects", projects_path %>
        <% end %>

        <% if current_user %>
          <div class="pull-right">
            <%= link_to "https://www.linkedin.com/in/stephenprill" do %>
              <%= image_tag("linked_in.png", width: "20em") %>
            <% end %> |

            <%= link_to "http://www.github.com/stephenprill" do %>
              <%= image_tag("github.png", width: "20em") %>
            <% end %> |

            <%= link_to "http://www.twitter.com/stephenprill" do %>
              <%= image_tag("twitter.png", width: "20em") %>
            <% end %> |

            <%= link_to "https://students.gschool.it/" do %>
              <%= image_tag("gschool.png", width: "20em") %>
            <% end %>
          </div>
        <% end %>
    </div>
</div>

  </body>
</html>
