<div class="page-header">
  <% if current_user.admin || current_user.id == params[:id] %>
    <%= link_to "Edit", edit_user_path, :class => "btn btn-info btn pull-right" %>

  <% end %>

    <h3><%= @user.full_name %></h3>
</div>

<dl class="dl-horizontal">
    <dt>
      <strong>First name:</strong>
      <dd><%= @user.first_name %></dd>
    </dt>

    <dt>
      <strong>Last name:</strong>
      <dd><%= @user.last_name %></dd>
    </dt>

    <dt>
      <strong>Email:</strong>
      <dd><%= mail_to @user.email %></dd>
    </dt>

    <dt>
    <strong>Pivotal Tracker Key</strong>
      <% if @user.pivotal_tracker_token && @user.pivotal_tracker_token != "" %>
        <dd>
        <%= @user.pivotal_tracker_token[0 .. 3] %>
        <%= '*' * (@user.pivotal_tracker_token.length - 4) %>
        </dd>
      <% end %>
    </dt>
</dl>
