
<div class = "container">
  <div class = "page-header">
    <%= link_to "Create User", new_user_path, :class => "btn btn-primary pull-right"%>
    <h2>Users</h2>

    </div>

  <table class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>E-mail</th>
          <th colspan="3">
          </th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td class="col-md-2"><%= link_to user.full_name, user %></td>
          <td width="col-md-2"><%= mail_to user.email %></td>
          <div class ="col-md-3">

          <% if user == current_user || current_user.admin %>
        <div class = "pull-right">
          <td width="30px"><%= link_to "Edit", edit_user_path(user) %></td>
        </div>
      </tr>
      <% else %>
      <td></td>
      <% end %>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
