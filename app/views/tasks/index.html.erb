
<div class="container">
  <div class = "page-header">
    <div class="pull-right">
      <%= link_to_if params[:type] != "all", "All", project_tasks_path(type: "all") %> |
      <%= link_to_if params[:type] == "all", "Incomplete", project_tasks_path(type: "incomplete") %>
      <%= link_to 'Create Task', new_project_task_path, class: 'btn btn-info' %>
    </div>

    <h3>Tasks</h3>
</div>


  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Description</th>
        <th>Complete</th>
        <th>Due</th>
        <th colspan="3">
        </th>
      </tr>
    </thead>

    <tbody>
     <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>

        <td><%= task.due_date.try(:strftime, "%m/%d/%Y") %></td>

        <td width="30px">
          <%= link_to 'Show',  project_task(task), class: 'btn btn-success pull-right' %>
        </td>

        <td width="30px">
          <%= link_to 'Edit', edit_project_task(task), class: 'btn btn-info pull-right' %>
        </td>

        <td width="30px">
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %>
        </td>
      </tr>

    <% end %>
    </tbody>
  </table>
 </div>
