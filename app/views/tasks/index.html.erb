
  <div class="container">
    <div class = "page-header">

      <ol class="breadcrumb">
        <li><%= link_to "Projects", projects_path %></li>
        <li><%= link_to @project.name, project_path(@project) %> </li>
        <li class="active">Task</li>
      </ol>

      <div class="pull-right">
        <%= link_to_if params[:type] != "all", "All", project_tasks_path(type: "all") %> |
        <%= link_to_if params[:type] == "all", "Incomplete", project_tasks_path(type: "incomplete") %>
        <%= link_to 'Create Task', new_project_task_path, class: 'btn btn-info' %>
      </div>

      <h3>Tasks for <%= @project.name %></h3>
  </div>


    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Description</th>
          <th>Complete</th>
          <th>Due</th>
          <th colspan="3">
          </th>
        </tr>
      </thead>

      <tbody>
       <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.description, project_task_path(@project, task) %>

            <span class="badge"><%= @project.task.comments.count %></span></td>
          <td><%= task.complete %></td>
          <td><%= task.due_date.try(:strftime, "%m/%d/%Y") %></td>

          <td width="30px">
            <%= link_to 'Show',  project_task_path(@project, task), class: 'btn btn-success pull-right' %>
          </td>

          <td width="30px">
            <%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-info pull-right' %>
          </td>

          <td width="30px">
            <%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %>
          </td>
        </tr>

      <% end %>
      </tbody>
    </table>
 </div>
