<!-- <html [class:”form-horizontal”}> -->
<div class="container">
<div class = "page-header">
<div class="pull-right">
    <%= link_to "All", tasks_path(type: "all") %> |
    <%= link_to "Incomplete", tasks_path(type: "incomplete") %>
    <%= link_to 'Create Task', new_task_path, class: 'btn btn-info pull-right' %>
  </div>

    <h1>Tasks</h1>
</div>


  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Complete</th>
        <th>Due Date</th>
        <th colspan="3">
        </th>
      </tr>
    </thead>

    <tbody>
     <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>


        <td width="30px">
          <%= link_to 'Show', task_path(task), class: 'btn btn-success pull-right' %>
        </td>

        <td width="30px">
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info pull-right' %>
        </td>

        <td width="30px">
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %>
        </td>
      </tr>

    <% end %>
    </tbody>
  </table>
 </div>
