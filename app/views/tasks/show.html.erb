  <div class="container">
    <% if notice %>
    <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="page-header">
    <div class="pull-right">
  <%= link_to 'Edit', edit_project_task_path(@project, @task), class: 'btn btn-info' %>
  </div>
    <h3><%= @task.description %></h3>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path %></li>
    <li><%= link_to @project.name, projects_path(@project) %></li>
    <li><%= link_to "Tasks", project_tasks_path %></li>
    <li class="active">Show</li>
  </ol>



  <p>
    <strong>Description:</strong>
    <%= @task.description %>
  </p>


  <p>
    <strong>Completed:</strong>
    <%= @task.complete %>
  </p>

  <p>
    <strong>Due Date:</strong>
    <%= @task.due_date.try(:strftime, "%m/%d/%Y") %>
  </p>

    <h3>Comments</h3>


  <% @task.comments.all.each do |comment| %>
    <div class="row">
      <div class="col-xs-3">
        <%= link_to comment.user.full_name, user_path(comment.user) %>
        <div class="text-muted">
          <%= time_ago_in_words(comment.created_at) %> ago
        </div>
      </div>

      <div class="col-xs-9">
        <%= comment.comment %>
      </div>

    </div>
  <% end %>

  <br>
  
    <%= form_for [@projects, @tasks, @comment], html: {class: "form-horizontal"} do |f| %>

      <div class="form-group">
        <div class= 'col-xs-offset-3 col-xs-9 ' >
          <%= f.text_area :comment, class: 'form-control' %>
          <%= hidden_field_tag :task_id, @task.id %>
          <%= hidden_field_tag :project_id, @project.id %>
        </div>
      </div>



      <div class="form-group">
          <div class= 'col-xs-offset-3 col-xs-9 ' >
            <%= f.submit 'Add Comment', class: 'btn btn-primary' %>
          </div>
        </div>




    <% end %>

  </div>
